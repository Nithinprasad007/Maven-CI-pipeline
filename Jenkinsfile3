  pipeline{
   agent any

   tools {
     maven 'mvn'
   }
   stages {
       
       stage("git pull"){
           steps{
               git branch: 'master', credentialsId: 'np', url: 'https://github.com/thevictorgreen/JavaJenkinsMavenSonarqubeExample.git'
           }
       }

     stage ("build") {
        steps {
           sh 'mvn clean install'
        }
     }

        stage ("sonar"){
            steps{
                script{
                withSonarQubeEnv('sonarQube') {
            sh 'mvn clean verify sonar:sonar -Dsonar.projectName=sonarIntegratedjfrog-nexusProject -Dsonar.projectKey=sonarIntegratedjfrog-nexusProject'
                }
        }
            }
            
        }
     stage ("Archive the Artifact"){
            steps{
                archiveArtifacts artifacts: '**/*.jar', followSymlinks: false
            }
        }
     stage('jfrog'){
            steps{
                rtUpload (
    serverId: 'jfrog',
    spec: '''{
          "files": [
            {
               "pattern": "*.jar",
              "target": "example-repo-local"
            }
         ]
    }''',
        )}
        
     }
     stage('JaCoCo') {
            steps {
                echo 'Code Coverage'
                jacoco()
            }
        }
   stage('Static Analysis') {
            steps {
                // Execute Checkstyle and generate report
                // Example: Using the Checkstyle plugin
                checkstyle canComputeNew: false, defaultEncoding: '', healthy: '', pattern: 'checkstyle-result.xml', unHealthy: ''
                
                // Publish Checkstyle report
                // Example: Using the Warnings Next Generation plugin
                recordIssues enabledForFailure: true, tools: [checkStyle(pattern: 'checkstyle-result.xml')]
            }
        }
    }
  }
